{
  "name": "@syncpad/express_backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "rimraf dist && tsup",
    "pretty": "npx prettier ./src --write",
    "pretty:check": "npx prettier ./src --check",
    "lint": "npx eslint . --fix",
    "lint:check": "npx eslint .",
    "test": "NODE_ENV=development vitest run",
    "test:watch": "NODE_ENV=development vitest",
    "test:coverage": "vitest run --coverage",
    "seed:dev": "NODE_ENV=development tsx ./scripts/seed.ts",
    "start": "NODE_ENV=production node dist/server.js",
    "start:dev": "NODE_ENV=development nodemon --watch src --ext ts --exec tsx src/server.ts",
    "start:pm2": "NODE_ENV=production pm2 start dist/server.js --name express-backend",
    "restart:pm2": "NODE_ENV=production pm2 restart express-backend"
  },
  "keywords": [
    "expressjs",
    "node",
    "template",
    "boilerplate"
  ],
  "author": "Alexander Rodriguez",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "@hocuspocus/server": "^3.4.0",
    "@syncpad/redis-client": "workspace:*",
    "better-auth": "^1.3.27",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-ws": "^5.0.2",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "http-status": "^2.1.0",
    "morgan": "^1.10.1",
    "pm2": "^6.0.13",
    "qs": "^6.14.0",
    "redis": "^5.10.0",
    "winston": "^3.18.3",
    "xss-filters": "^1.2.7",
    "yjs": "^13.6.27",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-ws": "^3.0.6",
    "@types/hpp": "^0.2.6",
    "@types/http-errors": "^2.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/qs": "^6.14.0",
    "@types/supertest": "^2.0.16",
    "@types/xss-filters": "^1.2.0",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^2.1.4"
  }
}
